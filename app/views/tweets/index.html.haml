.page__title  ツイート一覧

.tweets
  -@tweets.each do |tweet|
    .tweet
      .tweet__upper
        .tweet__upper__name
          =tweet.user.nickname
        .tweet__upper__time
          =tweet.created_at.strftime("%Y/%m/%d %H:%M")
        -if user_signed_in?
          .tweet__upper__tweet__show
            =link_to "ツイート詳細",  tweet_path(tweet.id)
      .tweet__bottom__content
        =tweet.content
  =paginate(@tweets)

